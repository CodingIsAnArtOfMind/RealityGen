<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="003-create-property-files-table" author="realtygen">
        <createTable tableName="property_files">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="property_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_property_files_property" references="properties(id)" deleteCascade="true"/>
            </column>
            <column name="file_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="file_path" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="file_type" type="VARCHAR(50)"/>
            <column name="file_size" type="BIGINT"/>
            <column name="is_primary" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="uploaded_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <createIndex tableName="property_files" indexName="idx_property_files_property_id">
            <column name="property_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
